---
import { t } from "i18next";
---

<footer>
  <span>RAFT. 2022</span>
  {
    !!t("footer.companyInfo", { returnObjects: true }).length && (
      <div class="company">
        {t("footer.companyInfo", { returnObjects: true }).map((text) => (
          <span>{text}</span>
        ))}
      </div>
    )
  }
  <span>{t("footer.location")}</span>
  {
    t("footer.LinkedIn") && (
      <img src="/linkedin_icon.webp" alt="LinkedIn" width="40" height="40" />
    )
  }
</footer>
<style>
  footer {
    max-width: 100vw;
    background-color: var(--black);
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
    padding: 2rem;
    margin-top: 2rem;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    flex-wrap: wrap;
    gap: 30px;
  }
  .company {
    display: flex;
    flex-direction: column;
    max-width: 600px;
    gap: 10px;
  }
  .company > span:first-of-type {
    margin-bottom: 2rem;
  }
</style>
